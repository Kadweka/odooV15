<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="loan_memo_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row text-center">
                            <h2 class="w-100 text-center">Loan Memo</h2>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6">
                                <p>
                                    <span>Employee:</span>
                                    &amp;nbsp;
                                    <span t-field="o.employee_id.name" />
                                </p>

                                <p>
                                    <span>Department:</span>
                                    &amp;nbsp;
                                    <span t-field="o.department_id.name" />

                                </p>
                                <p>
                                    <span>Job Position:</span>
                                    &amp;nbsp;
                                    <span t-field="o.job_position.name" />
                                </p>
                                <p>
                                    <span>Loan Status:</span>
                                    &amp;nbsp;
                                    <span t-out="dict(o._fields['state'].selection).get(o.state)" />
                                </p>
                            </div>
                            <div class="col-6">
                                <p>
                                    <span>Loan Amount:</span>
                                    &amp;nbsp;
                                    <span t-field="o.loan_amount" />
                                </p>
                                <p>
                                    <span>Date:</span>
                                    &amp;nbsp;
                                    <span t-field="o.date" />
                                </p>
                                <p>
                                    <span>No of Installments:</span>
                                    &amp;nbsp;
                                    <span t-field="o.installment" />
                                </p>
                                <p>
                                    <span>Payment Start Date:</span>
                                    &amp;nbsp;
                                    <span t-field="o.payment_date" />
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <th>Payment Date</th>
                                <th>Amount</th>
                            </thead>
                            <tbody>
                                <t t-foreach="o.loan_lines" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.date" />
                                        </td>
                                        <td>
                                            <span t-field="line.amount" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr>
                                        <td>Total Amount</td>
                                        <td class="text-right">
                                            <span t-field="o.total_amount" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Total Paid Amount</td>
                                        <td class="text-right">
                                            <span t-field="o.total_paid_amount" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td>
                                            <strong>Balance Amount</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.balance_amount" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <br />
                        <t t-call="oo_adc_memo.oo_approvers_template" />
                    </div>

                </t>
            </t>
        </t>
    </template>
</odoo>
