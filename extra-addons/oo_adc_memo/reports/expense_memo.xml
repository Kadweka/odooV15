<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data noupdate="0">

    <template id="oo_adc_memo.oo_adc_memo">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <br />
            <div class="page">
              <div class="row text-center">
                <h2 class="w-100 text-center">Approval Memo</h2>
              </div>
              <div class="row mt-2">
                <div class="col-6">
                  <p>
                    <span>To:</span>
                    &amp;nbsp;
                    <span t-field="o.sendto_uid.name" />
                  </p>

                  <p>
                    <span>Ref:</span>
                    &amp;nbsp;
                    <span t-field="o.ref" />

                  </p>
                  <p>
                    <span>Subject:</span>
                    &amp;nbsp;
                    <span t-field="o.name" />
                  </p>
                </div>
                <div class="col-6">
                  <p>
                    <span>From:</span>
                    &amp;nbsp;
                    <span t-field="o.employee_id.name" />
                  </p>
                  <p>
                    <span>Date:</span>
                    &amp;nbsp;
                    <span t-field="o.date" />
                  </p>
                </div>
              </div>
              <div class="row mt-4">
                <div class="col-12">
                  <p t-field="o.description" />
                </div>
              </div>

              <br />
              <t t-call="oo_adc_memo.oo_approvers_template" />
            </div>
          </t>
        </t>
      </t>
    </template>


    <template id="oo_approvers_template">
      <div class="row mt-4">
        <div class="col-6">
          <p>Approved By:___________________________________________________</p>
          <p>Approved By:___________________________________________________</p>
          <p>Approved By:___________________________________________________</p>
        </div>
        <div class="col-6">
          <p>Date:___________________________________________________</p>
          <p>Date:___________________________________________________</p>
          <p>Date:___________________________________________________</p>
        </div>
      </div>
    </template>

  </data>


</odoo>
