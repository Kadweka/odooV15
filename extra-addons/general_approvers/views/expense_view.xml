<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="hr_expense_sheet_double_validation" model="ir.ui.view">
      <field name="name">hr.expense.sheet.approval.validation</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
                        
          <xpath expr="//form/header/button[@name='action_submit_sheet']" position="before">
            <button name="need_second_approver" string="Submit Memo" type="object" states="waiting" class="oe_highlight" groups="general_approvers.first_expense_approver"/>
          </xpath>

          <xpath expr="//form/header/button[@name='action_submit_sheet']" position="replace">
            <button name="need_third_approver" string="Validate Memo" type="object" states="draft" class="oe_highlight" groups="general_approvers.second_expense_approver" />
          </xpath>

  
          <xpath expr="//form/header/button[@name='approve_expense_sheets']" position="replace">
            <button name="need_owner" string="Approve Memo" type="object" states="submit" class="oe_highlight" groups="general_approvers.third_expense_approver"/>
          </xpath>
        </field>
    </record>										
</odoo>
