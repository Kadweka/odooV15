<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <report id="cheque_request_report" string="Cheque Request" model="hr.expense" report_type="qweb-pdf" name="hr_expense.hr_expense_view_form" file="hr_expense.hr_expense_view_form" />

    <template id="cheque_request_view_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <br/>
                <div class="page">
                    <div class="row text-center">
                        <h2 class="w-100 text-center">Internal Memo</h2>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <p>
                                <span>To:</span>
                                &amp;nbsp;
                                <span t-field="o.sendto_uid.name"/>
                            </p>

                            <p>
                                <span>Ref:</span>
                                &amp;nbsp;
                                <span t-field="o.ref"/>

                            </p>
                            <p>
                                <span>Subject:</span>
                                &amp;nbsp;
                                <span t-field="o.name"/>
                            </p>
                        </div>
                        <div class="col-6">
                            <p>
                                <span>From:</span>
                                &amp;nbsp;
                                <span t-field="o.employee_id.name"/>
                            </p>
                            <p>
                                <span>Date:</span>
                                &amp;nbsp;
                                <span t-field="o.date"/>
                            </p>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-12">
                            <p t-field="o.description"/>
                        </div>
                    </div>
                    
                    <br />
                    <div class="row mt-4">
                        <div class="col-6">
                            <p>Approved By:___________________________________________________</p>
                            <p>Approved By:___________________________________________________</p>
                            <p>Approved By:___________________________________________________</p>
                        </div>
                        <div class="col-6">
                            <p>Date:___________________________________________________</p>
                            <p>Date:___________________________________________________</p>
                            <p>Date:___________________________________________________</p>
                        </div>
                    </div>
                </div>
                
            </t>
            </t>
        </t>
    </template>
</odoo>